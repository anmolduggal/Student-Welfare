	<% include ./partials/header %>		

    <div class="jumbotron userdisplay">
    	
    	<form action="/complaint/viewcomplaint" method="post">
<div class="container">
<div class="form-row">
<div class="form-group col-md-6">
<label >First Name</label>
<input type="text" name="fname" class="form-control"  value=<%=  user.firstname %> readonly>
</div>
<div class="form-group col-md-6">
<label >Second Name</label>
<input type="text" name="sname" class="form-control"  value=<%=  user.secondname %> readonly>
</div>
</div>
<div class="form-row">  
<div class="form-group col-md-6">
      <label ><% if(user.isStaff==false){ %>Roll No <% } else{ %>Teacher No.<% } %> </label>
      <input type="number"  name="roll" class="form-control" value=<%=  user.roll %> readonly>
      </div>
      <div class="form-group col-md-6">
      <label ><% if(user.isStaff==false){ %>Registration No. <% } else{ %>Teacher Id<% } %> </label>
      <input type="number" name="regno" class="form-control"  value=<%= user.regno %> readonly>
      </div></div>


  <div class="form-row">
    <div class="form-group col-md-6">
      <label >Email</label>
      <input type="email" name="emailid" class="form-control" id="inputEmail4"  value=<%= user.emailid %> readonly>
    </div>
    <div class="form-group col-md-6">
      <label for="inputPassword4">Branch</label>
      <input type="text" name="Branch" class="form-control" value= <%=  user.branch %> readonly>
    </div>
  </div>
      <div class="form-row">
  
    	<% if(user.isStaff==false){ %>
    <div class="form-group col-md-6">
      <label for="inputZip">Joining Year</label>
      <input  type="text" name="year" class="form-control"   value=<%=  user.joining_year %> readonly>
        </div>
        <% } %>
    <div class="form-group col-md-6">
      <label for="inputZip">Phone Number</label>

      <input  type="tel" name="year" class="form-control"   value=<%=  user.phone %> readonly>
        </div></div> 


</form>
<% if(currentUser.isAdmin==true){ %>
<form action="/delete/<%= user._id %>" method="post">
<center><a href="/complaint/viewcomplaint/<%= user._id %>" class="btn btn-primary active"><i class="far fa-eye"></i> View Complaints</a> 

<input type="submit" class="btn btn-danger" onclick="alert("Are you sure you want to delete user");" value="Delete User"></center></form>
<% } %>
<% if(currentUser._id.equals(user._id)){ %>
  <center><a href="/changepassword">Change Password</a></center></form>
<% } %>
</div>

