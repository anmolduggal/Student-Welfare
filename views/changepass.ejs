	<% include ./partials/header %>
	<div class="container">
	<div class="jumbotron" style="margin-top:20px">
	<form action="/changepassword" method="post">
	<div class="form-group row">
<div class="form-group col-md-6">
	<h3>Old Password : </h3>
	<input type="password" name="oldpass" class="form-control" placeholder="Input Old Password Here"></input>
	</div>
<div class="form-group col-md-6">
	<h3>New Password : </h3>
	<input type="password" name="newpass" class="form-control" title="Password must be 8-12 characters including 1 uppercase letter, 1 lowercase letter and numeric characters" required pattern="(?=.*\d)(?=.*[a-z])(?=.*[A-Z]).{6,12}" placeholder="Input New Password Here" required></input>
	</div>
	</div>
	<div style="width:100%">
	<center><input type="submit" value="Change Password" class="btn btn-success" required></center>
	</div>
	</form>
	</div>
	</div>		
	<% include ./partials/footer %>		
