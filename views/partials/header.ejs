			 <a class="dropdown-item " href="/notice/anotice">Academic Notice</a>
	          <div class="dropdown-divider"></div>
	          <a class="dropdown-item" href="/notice/hnotice">Hostel Notice</a>
	          </div>
	      </li>
	      <li class="nav-item dropdown">
	        <a class="btn btn-light dropdown-toggle abc "  id="navbarDropdown"  href="#" role="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false" ><i class="fas fa-frown"></i> Complaint</a>
	        
	        <div class="dropdown-menu" aria-labelledby="navbarDropdown">
	        <% if(currentUser.isStaff== false || currentUser.isAdmin==true){ %>
